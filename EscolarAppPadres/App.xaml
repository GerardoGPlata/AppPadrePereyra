<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:EscolarAppPadres"
             xmlns:converters="clr-namespace:EscolarAppPadres.Helpers"
             x:Class="EscolarAppPadres.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Convierte string a Color -->
            <converters:ColorConverter x:Key="ColorConverter" />

            <!-- Muestra un borde si el color está seleccionado -->
            <converters:SelectedColorBorderConverter x:Key="SelectedColorBorderConverter" />

            <!-- Habilita el botón si hay selección -->
            <converters:NotNullToBoolConverter x:Key="NotNullToBoolConverter" />

            <converters:TipoDocumentoToColorConverter x:Key="TipoDocumentoToColorConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
