<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:syncfusion="clr-namespace:Syncfusion.Maui.Popup;assembly=Syncfusion.Maui.Popup"
             xmlns:buttons="clr-namespace:Syncfusion.Maui.Buttons;assembly=Syncfusion.Maui.Buttons"
             xmlns:converters="clr-namespace:EscolarAppPadres.Helpers"
             x:Class="EscolarAppPadres.Views.Service.PendingPaymentsView"
             Title="PAGOS"
             BackgroundColor="#f5f8fa"
             Padding="{OnPlatform iOS='0,20,0,0', Android='0'}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:TipoDocumentoToColorConverter x:Key="TipoDocumentoToColorConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <RefreshView Command="{Binding LoadPaymentsCommand}"
                     IsRefreshing="{Binding IsRefreshing}">
            <ScrollView>
                <StackLayout Padding="15"
                             Spacing="15"
                             Margin="0,0,0,60">

                    <Label Text="No hay pagos pendientes"
                           FontSize="16"
                           TextColor="Gray"
                           HorizontalOptions="Center"
                           IsVisible="{Binding SinResultados}"/>

                    <CollectionView ItemsSource="{Binding PendingPayments}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="0,0,0,10">
                                    <Frame BackgroundColor="White"
                                           CornerRadius="12"
                                           HasShadow="True"
                                           Padding="0">
                                        <Grid Padding="15"
                                              RowSpacing="8">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Checkbox de selección -->
                                            <buttons:SfCheckBox Grid.Row="0"
                                                      Grid.Column="0"
                                                      Grid.RowSpan="5"
                                                      IsChecked="{Binding IsSelected}"
                                                      CornerRadius="5.0"
                                                      VerticalOptions="Center"
                                                      CheckedColor="#3c9c4c"
                                                      UncheckedColor="Gray"
                                                      Margin="0,0,10,0"/>

                                            <!-- Concepto (primera fila) -->
                                            <Label Grid.Row="0"
                                                   Grid.Column="1"
                                                   Text="{Binding Concepto}"
                                                   FontSize="16"
                                                   FontAttributes="Bold"
                                                   TextColor="#273840"
                                                   VerticalOptions="Center"
                                                   LineBreakMode="WordWrap"/>

                                            <!-- Importe total (primera fila, alineado a la derecha) -->
                                            <Label Grid.Row="0"
                                                   Grid.Column="2"
                                                   Text="{Binding ImporteFormateado}"
                                                   FontSize="18"
                                                   FontAttributes="Bold"
                                                   TextColor="{Binding ColorImporte}"
                                                   VerticalOptions="Center"
                                                   HorizontalOptions="End"/>

                                            <!-- Información del estudiante (segunda fila) -->
                                            <Label Grid.Row="1"
                                                   Grid.Column="1"
                                                   Grid.ColumnSpan="2"
                                                   Text="{Binding Alumno}"
                                                   FontSize="14"
                                                   TextColor="#666666"
                                                   HorizontalOptions="End"/>

                                            <!-- Estado y fecha límite (tercera fila) -->
                                            <Grid Grid.Row="2"
                                                  Grid.Column="1"
                                                  Grid.ColumnSpan="2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <Label Grid.Column="0"
                                                       Text="Pendiente"
                                                       FontSize="12"
                                                       TextColor="#ff6b6b"
                                                       FontAttributes="Bold"
                                                       HorizontalOptions="Start"
                                                       VerticalOptions="Center"/>

                                                <Label Grid.Column="1"
                                                       Text="{Binding FechaLimiteFormateada, StringFormat='Fecha límite: {0}'}"
                                                       FontSize="12"
                                                       TextColor="#666666"
                                                       HorizontalOptions="End"
                                                       VerticalOptions="Center"/>
                                            </Grid>

                                            <!-- Desglose en línea horizontal (cuarta fila) -->
                                            <StackLayout Grid.Row="3"
                                                         Grid.Column="0"
                                                         Grid.ColumnSpan="3"
                                                         Orientation="Horizontal"
                                                         Spacing="20"
                                                         Margin="0,8,0,0"
                                                         HorizontalOptions="Center">
                                                <!-- Saldo -->
                                                <StackLayout Spacing="2">
                                                    <Label Text="Saldo"
                                                           FontSize="10"
                                                           TextColor="#666666"
                                                           FontAttributes="Bold"
                                                           HorizontalOptions="Center"/>
                                                    <Label Text="{Binding ImporteBase, StringFormat='{0:C2}'}"
                                                           FontSize="12"
                                                           TextColor="#666666"
                                                           HorizontalOptions="Center"/>
                                                </StackLayout>

                                                <!-- Descuento -->
                                                <StackLayout Spacing="2">
                                                    <Label Text="Descuento"
                                                           FontSize="10"
                                                           TextColor="#3c9c4c"
                                                           FontAttributes="Bold"
                                                           HorizontalOptions="Center"/>
                                                    <Label Text="{Binding DescuentoDoc, StringFormat='{0:C2}'}"
                                                           FontSize="12"
                                                           TextColor="#3c9c4c"
                                                           HorizontalOptions="Center"/>
                                                </StackLayout>

                                                <!-- Recargos -->
                                                <StackLayout Spacing="2">
                                                    <Label Text="Recargos"
                                                           FontSize="10"
                                                           TextColor="#ff8c00"
                                                           FontAttributes="Bold"
                                                           HorizontalOptions="Center"/>
                                                    <Label Text="{Binding InteresDoc, StringFormat='{0:C2}'}"
                                                           FontSize="12"
                                                           TextColor="#ff8c00"
                                                           HorizontalOptions="Center"/>
                                                </StackLayout>
                                            </StackLayout>
                                        </Grid>
                                    </Frame>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
            </ScrollView>
        </RefreshView>

        <!-- Barra inferior con Total y botón PAGAR -->
        <Grid BackgroundColor="White"
              Padding="15,10"
              ColumnDefinitions="*,Auto"
              VerticalOptions="End"
              Margin="0,0,0,10"
              HeightRequest="60">
            <Label Text="{Binding Total, StringFormat='Total: {0:C2}'}"
                   FontSize="16"
                   FontAttributes="Bold"
                   TextColor="#273840"
                   VerticalOptions="Center"/>

            <Button Text="PAGAR"
                    Command="{Binding PagarCommand}"
                    IsEnabled="{Binding CanPagar}"
                    BackgroundColor="#3c9c4c"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="10"
                    Padding="16,6"
                    HeightRequest="40"
                    VerticalOptions="Center"
                    HorizontalOptions="End"/>
        </Grid>

        <!-- Popup de detalles de pago -->
        <syncfusion:SfPopup x:Name="paymentDetailsPopup"
                            StaysOpen="True"
                            OverlayMode="Blur"
                            ShowCloseButton="True"
                            IsOpen="{Binding IsPopupOpen}"
                            AutoSizeMode="Height"
                            AnimationMode="Fade"
                            HeaderTitle="{Binding PopupHeader}">
            <syncfusion:SfPopup.PopupStyle>
                <syncfusion:PopupStyle HeaderBackground="#273840"
                                       HeaderFontSize="16"
                                       HeaderTextColor="White"
                                       PopupBackground="White"
                                       BlurIntensity="ExtraDark"/>
            </syncfusion:SfPopup.PopupStyle>
            <syncfusion:SfPopup.ContentTemplate>
                <DataTemplate>
                    <StackLayout Padding="20,20,20,20"
                                 Spacing="15">

                        <!-- Lista de pagos seleccionados - Solo concepto e importe -->
                        <CollectionView ItemsSource="{Binding SelectedPayments}"
                                        MaximumHeightRequest="200">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="0,8"
                                          ColumnSpacing="15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Concepto -->
                                        <Label Grid.Column="0"
                                               Text="{Binding Concepto}"
                                               FontSize="15"
                                               TextColor="#333333"
                                               VerticalOptions="Center"/>

                                        <!-- Importe -->
                                        <Label Grid.Column="1"
                                               Text="{Binding ImporteFormateado}"
                                               FontSize="15"
                                               TextColor="#333333"
                                               VerticalOptions="Center"
                                               HorizontalOptions="End"/>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                        <!-- Separador -->
                        <BoxView BackgroundColor="#e5e5e5"
                                 HeightRequest="1"
                                 Margin="0,5"/>

                        <!-- Resumen financiero -->
                        <StackLayout Spacing="8">
                            <!-- Subtotal -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0"
                                       Text="Subtotal"
                                       FontSize="14"
                                       TextColor="#666666"/>
                                <Label Grid.Column="1"
                                       Text="{Binding SubTotal, StringFormat='{0:C2}'}"
                                       FontSize="14"
                                       TextColor="#666666"
                                       HorizontalOptions="End"/>
                            </Grid>

                            <!-- Descuento -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0"
                                       Text="Descuento"
                                       FontSize="14"
                                       TextColor="#666666"/>
                                <Label Grid.Column="1"
                                       Text="{Binding TotalDescuento, StringFormat='{0:C2}'}"
                                       FontSize="14"
                                       TextColor="#666666"
                                       HorizontalOptions="End"/>
                            </Grid>

                            <!-- Recargos -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0"
                                       Text="Recargos"
                                       FontSize="14"
                                       TextColor="#666666"/>
                                <Label Grid.Column="1"
                                       Text="{Binding TotalRecargos, StringFormat='{0:C2}'}"
                                       FontSize="14"
                                       TextColor="#666666"
                                       HorizontalOptions="End"/>
                            </Grid>
                        </StackLayout>

                        <!-- Separador -->
                        <BoxView BackgroundColor="#e5e5e5"
                                 HeightRequest="1"
                                 Margin="0,5"/>

                        <!-- Total -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0"
                                   Text="Total"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="#333333"/>
                            <Label Grid.Column="1"
                                   Text="{Binding Total, StringFormat='{0:C2}'}"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="#333333"
                                   HorizontalOptions="End"/>
                        </Grid>

                        <!-- Botón de pago -->
                        <Button Text="{Binding Total, StringFormat='PAGAR {0:C2}'}"
                                Command="{Binding ConfirmPaymentCommand}"
                                BackgroundColor="#3c9c4c"
                                TextColor="White"
                                FontAttributes="Bold"
                                CornerRadius="25"
                                HeightRequest="50"
                                Margin="0,10,0,0"/>
                    </StackLayout>
                </DataTemplate>
            </syncfusion:SfPopup.ContentTemplate>
        </syncfusion:SfPopup>
    </Grid>
</ContentPage>