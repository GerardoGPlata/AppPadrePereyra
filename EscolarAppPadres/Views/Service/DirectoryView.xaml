<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EscolarAppPadres.Views.Service.DirectoryView"
             Title="DIRECTORIO"
             BackgroundColor="#f5f8fa"
             Padding="15">

    <RefreshView IsRefreshing="{Binding IsRefreshing}" Command="{Binding LoadDirectoryCommand}">
        <CollectionView ItemsSource="{Binding DirectoryEntries}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BackgroundColor="White"
                           CornerRadius="16"
                           HasShadow="True"
                           Padding="15"
                           Margin="0,0,0,12">

                        <Grid ColumnDefinitions="*,Auto,Auto"
                              RowDefinitions="Auto,Auto"
                              ColumnSpacing="10">

                            <!-- Nombre y correo -->
                            <StackLayout Grid.Column="0" Grid.RowSpan="2" Spacing="3">
                                <Label Text="{Binding NombreDepartamento}"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="#273840" />
                                <Label Text="{Binding CorreoElectronico}"
                                       FontSize="13"
                                       TextColor="Gray" />
                            </StackLayout>

                            <!-- Extensión -->
                            <Label Text="{Binding Extension, StringFormat='EXT. {0}'}"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="#273840"
                                   VerticalOptions="Start"
                                   Grid.Column="1" />

                            <!-- Botón de llamada -->
                            <ImageButton Source="phone_enable.svg"
                                         HeightRequest="24"
                                         WidthRequest="24"
                                         BackgroundColor="Transparent"
                                         CommandParameter="{Binding Extension}"
                                         Clicked="OnCallClicked"
                                         Grid.Column="2"
                                         VerticalOptions="Start" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </RefreshView>
</ContentPage>
