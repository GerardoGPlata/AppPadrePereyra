<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EscolarAppPadres.Views.Calendar.CalendarView"
             xmlns:core="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
             xmlns:scheduler="clr-namespace:Syncfusion.Maui.Scheduler;assembly=Syncfusion.Maui.Scheduler"
             xmlns:syncfusion="clr-namespace:Syncfusion.Maui.Popup;assembly=Syncfusion.Maui.Popup"
             xmlns:buttons="clr-namespace:Syncfusion.Maui.Buttons;assembly=Syncfusion.Maui.Buttons"
             Title="CALENDARIO">

    <Shell.TitleView>
        <Grid ColumnDefinitions="Auto,*,Auto"
              HeightRequest="48"
              Padding="0"
              VerticalOptions="Center">
            <BoxView Grid.Column="0"
                     WidthRequest="44"
                     Opacity="0"
                     InputTransparent="True"/>

            <Label Grid.Column="1"
                   Text="CALENDARIO"
                   FontAttributes="Bold"
                   FontSize="18"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   VerticalOptions="Center"
                   TextColor="White"/>

            <ImageButton Grid.Column="2"
                         WidthRequest="44"
                         HeightRequest="44"
                         BackgroundColor="Transparent"
                         Padding="0"
                         Source="filter_outline"
                         Command="{Binding OpenFilterPopupCalendarCommand}"/>
        </Grid>
    </Shell.TitleView>

    <AbsoluteLayout>
        <ScrollView AbsoluteLayout.LayoutFlags="All"
                    AbsoluteLayout.LayoutBounds="0,0,1,1"
                    HorizontalOptions="Fill"
                    VerticalOptions="Fill">
            <Grid>
                <scheduler:SfScheduler x:Name="Scheduler"
                                       IsVisible="{Binding IsCalendarVisible}"
                                       View="{Binding SchedulerViewMode}"
                                       DisplayDate="{Binding DisplayDate}"
                                       AppointmentsSource="{Binding SchedulerEventModels}"
                                       AllowAppointmentDrag="False"
                                       AllowViewNavigation="False"
                                       ShowTodayButton="False"
                                       Tapped="OnSchedulerTapped"
                                       ShowBusyIndicator="True"
                                       TodayHighlightBrush="#008347">
                    <scheduler:SfScheduler.AppointmentMapping>
                        <scheduler:SchedulerAppointmentMapping
                            StartTime="StartDateTime"
                            EndTime="EndDateTime"
                            Subject="Nombre"
                            Background="BackgroundBrush"
                            IsAllDay="IsAllDay"/>
                    </scheduler:SfScheduler.AppointmentMapping>
                    <scheduler:SfScheduler.DaysView>
                        <scheduler:SchedulerDaysView StartHour="8"
                                                     EndHour="20"/>
                    </scheduler:SfScheduler.DaysView>
                    <scheduler:SfScheduler.AgendaView>
                        <scheduler:SchedulerAgendaView>
                            <scheduler:SchedulerAgendaView.MonthHeaderSettings>
                                <scheduler:SchedulerMonthHeaderSettings Background="#008347"
                                                                        Height="50"/>
                            </scheduler:SchedulerAgendaView.MonthHeaderSettings>
                        </scheduler:SchedulerAgendaView>
                    </scheduler:SfScheduler.AgendaView>
                </scheduler:SfScheduler>

                <CollectionView IsVisible="{Binding IsAgendaVisible}"
                                ItemsSource="{Binding AgendaEvents}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame CornerRadius="10"
                                   Padding="10"
                                   HasShadow="True"
                                   BackgroundColor="White"
                                   BorderColor="LightGray"
                                   Margin="10">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type CollectionView}}, Path=BindingContext.EventCalendarCommand}"
                                                          CommandParameter="{Binding .}"/>
                                </Frame.GestureRecognizers>

                                <Grid RowDefinitions="Auto,Auto"
                                      RowSpacing="5">

                                    <Label Grid.Row="0"
                                           Text="{Binding FechaInicio, StringFormat='{}{0:ddd. dd MMM, yyyy}'}"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           TextColor="Black"
                                           HorizontalOptions="Center"/>

                                    <Border Grid.Row="1"
                                            BackgroundColor="{Binding ColorIndicador}"
                                            Padding="10">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="10,10,10,10"/>
                                        </Border.StrokeShape>
                                        <Label Text="{Binding Nombre}"
                                               FontSize="15"
                                               FontAttributes="Bold"
                                               TextColor="Black"
                                               HorizontalOptions="Center"/>
                                    </Border>

                                </Grid>

                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <Label Text=""
                       TextColor="Black"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       FontSize="18"
                       FontAttributes="Bold"
                       Margin="10"
                       IsVisible="{Binding SelectedAgendaResult}"/>
            </Grid>
        </ScrollView>

        <!-- <Button x:Name="Filtros"
                FontSize="18"
                TextColor="Black"
                CornerRadius="20"
                BackgroundColor="{StaticResource StaticBackgroundColorGreen}"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                AbsoluteLayout.LayoutBounds="1,1,AutoSize,AutoSize"
                Margin="10"
                HeightRequest="65"
                WidthRequest="65"
                Command="{Binding OpenFilterPopupCalendarCommand}">
            <Button.ImageSource>
                <FileImageSource File="filter_outline"/>
            </Button.ImageSource>
        </Button> -->

        <!-- Popup de filtro de calendario (Syncfusion) -->
        <syncfusion:SfPopup x:Name="calendarFilterPopup"
                            Grid.RowSpan="2"
                            StaysOpen="True"
                            OverlayMode="Blur"
                            ShowCloseButton="True"
                            IsOpen="{Binding IsFilterPopupOpen}"
                            IsVisible="{Binding IsFilterPopupOpen}"
                            AutoSizeMode="Height"
                            AnimationMode="Fade"
                            HeaderTitle="Filtrar Calendario">
            <syncfusion:SfPopup.Triggers>
                <DataTrigger TargetType="syncfusion:SfPopup"
                             Binding="{Binding IsFilterPopupOpen}"
                             Value="False">
                    <Setter Property="InputTransparent"
                            Value="True"/>
                </DataTrigger>
                <DataTrigger TargetType="syncfusion:SfPopup"
                             Binding="{Binding IsFilterPopupOpen}"
                             Value="True">
                    <Setter Property="InputTransparent"
                            Value="False"/>
                </DataTrigger>
            </syncfusion:SfPopup.Triggers>
            <syncfusion:SfPopup.PopupStyle>
                <syncfusion:PopupStyle HeaderBackground="#273840"
                                       HeaderFontSize="16"
                                       HeaderTextColor="White"
                                       PopupBackground="White"
                                       CloseButtonIcon="close_icon"
                                       BlurIntensity="Dark"/>
            </syncfusion:SfPopup.PopupStyle>
            <syncfusion:SfPopup.ContentTemplate>
                <DataTemplate>
                    <VerticalStackLayout Padding="14,16"
                                         Spacing="12">
                        <Label Text="Vista:"
                               FontSize="14"
                               TextColor="#555"/>
                        <VerticalStackLayout Spacing="6">
                            <buttons:SfRadioButton Text="Agenda"
                                                   IsChecked="{Binding IsAgendaSelected}"
                                                   CheckedColor="#008347"
                                                   UncheckedColor="#008347"/>
                            <buttons:SfRadioButton Text="Semana"
                                                   IsChecked="{Binding IsSemanaSelected}"
                                                   CheckedColor="#008347"
                                                   UncheckedColor="#008347"/>
                            <buttons:SfRadioButton Text="Mes"
                                                   IsChecked="{Binding IsMesSelected}"
                                                   CheckedColor="#008347"
                                                   UncheckedColor="#008347"/>
                        </VerticalStackLayout>

                        <Label Text="Tipos de evento:"
                               FontSize="14"
                               TextColor="#555"
                               Margin="0,8,0,0"/>

                        <FlexLayout Direction="Row"
                                    Wrap="Wrap"
                                    AlignItems="Center"
                                    JustifyContent="Start"
                                    Margin="0,6,0,0">
                            <Border Stroke="#32CD32"
                                    StrokeThickness="2"
                                    BackgroundColor="Transparent"
                                    Padding="12,6"
                                    Margin="0,0,8,8">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="20"/>
                                </Border.StrokeShape>
                                <Border.Triggers>
                                    <DataTrigger TargetType="Border"
                                                 Binding="{Binding IsEventoChecked}"
                                                 Value="True">
                                        <Setter Property="BackgroundColor"
                                                Value="#32CD32"/>
                                        <Setter Property="StrokeThickness"
                                                Value="0"/>
                                    </DataTrigger>
                                </Border.Triggers>
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding ToggleEventFilterCommand}"
                                                          CommandParameter="1"/>
                                </Border.GestureRecognizers>
                                <Label Text="Evento"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       HorizontalTextAlignment="Center"
                                       TextColor="#32CD32">
                                    <Label.Triggers>
                                        <DataTrigger TargetType="Label"
                                                     Binding="{Binding IsEventoChecked}"
                                                     Value="True">
                                            <Setter Property="TextColor"
                                                    Value="White"/>
                                        </DataTrigger>
                                    </Label.Triggers>
                                </Label>
                            </Border>

                            <Border Stroke="#00FF00"
                                    StrokeThickness="2"
                                    BackgroundColor="Transparent"
                                    Padding="12,6"
                                    Margin="0,0,8,8">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="20"/>
                                </Border.StrokeShape>
                                <Border.Triggers>
                                    <DataTrigger TargetType="Border"
                                                 Binding="{Binding IsDiaFestivoChecked}"
                                                 Value="True">
                                        <Setter Property="BackgroundColor"
                                                Value="#00FF00"/>
                                        <Setter Property="StrokeThickness"
                                                Value="0"/>
                                    </DataTrigger>
                                </Border.Triggers>
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding ToggleEventFilterCommand}"
                                                          CommandParameter="2"/>
                                </Border.GestureRecognizers>
                                <Label Text="Día festivo"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       HorizontalTextAlignment="Center"
                                       TextColor="#00AA00">
                                    <Label.Triggers>
                                        <DataTrigger TargetType="Label"
                                                     Binding="{Binding IsDiaFestivoChecked}"
                                                     Value="True">
                                            <Setter Property="TextColor"
                                                    Value="White"/>
                                        </DataTrigger>
                                    </Label.Triggers>
                                </Label>
                            </Border>

                            <Border Stroke="#CA4327"
                                    StrokeThickness="2"
                                    BackgroundColor="Transparent"
                                    Padding="12,6"
                                    Margin="0,0,8,8">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="20"/>
                                </Border.StrokeShape>
                                <Border.Triggers>
                                    <DataTrigger TargetType="Border"
                                                 Binding="{Binding IsExamenesChecked}"
                                                 Value="True">
                                        <Setter Property="BackgroundColor"
                                                Value="#CA4327"/>
                                        <Setter Property="StrokeThickness"
                                                Value="0"/>
                                    </DataTrigger>
                                </Border.Triggers>
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding ToggleEventFilterCommand}"
                                                          CommandParameter="3"/>
                                </Border.GestureRecognizers>
                                <Label Text="Exámenes"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       HorizontalTextAlignment="Center"
                                       TextColor="#CA4327">
                                    <Label.Triggers>
                                        <DataTrigger TargetType="Label"
                                                     Binding="{Binding IsExamenesChecked}"
                                                     Value="True">
                                            <Setter Property="TextColor"
                                                    Value="White"/>
                                        </DataTrigger>
                                    </Label.Triggers>
                                </Label>
                            </Border>

                            <Border Stroke="#008000"
                                    StrokeThickness="2"
                                    BackgroundColor="Transparent"
                                    Padding="12,6"
                                    Margin="0,0,8,8">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="20"/>
                                </Border.StrokeShape>
                                <Border.Triggers>
                                    <DataTrigger TargetType="Border"
                                                 Binding="{Binding IsTareasChecked}"
                                                 Value="True">
                                        <Setter Property="BackgroundColor"
                                                Value="#008000"/>
                                        <Setter Property="StrokeThickness"
                                                Value="0"/>
                                    </DataTrigger>
                                </Border.Triggers>
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding ToggleEventFilterCommand}"
                                                          CommandParameter="4"/>
                                </Border.GestureRecognizers>
                                <Label Text="Tareas"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       HorizontalTextAlignment="Center"
                                       TextColor="#008000">
                                    <Label.Triggers>
                                        <DataTrigger TargetType="Label"
                                                     Binding="{Binding IsTareasChecked}"
                                                     Value="True">
                                            <Setter Property="TextColor"
                                                    Value="White"/>
                                        </DataTrigger>
                                    </Label.Triggers>
                                </Label>
                            </Border>

                            <Border Stroke="#F08080"
                                    StrokeThickness="2"
                                    BackgroundColor="Transparent"
                                    Padding="12,6"
                                    Margin="0,0,8,8">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="20"/>
                                </Border.StrokeShape>
                                <Border.Triggers>
                                    <DataTrigger TargetType="Border"
                                                 Binding="{Binding IsBecasChecked}"
                                                 Value="True">
                                        <Setter Property="BackgroundColor"
                                                Value="#F08080"/>
                                        <Setter Property="StrokeThickness"
                                                Value="0"/>
                                    </DataTrigger>
                                </Border.Triggers>
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding ToggleEventFilterCommand}"
                                                          CommandParameter="5"/>
                                </Border.GestureRecognizers>
                                <Label Text="Becas"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       HorizontalTextAlignment="Center"
                                       TextColor="#C75D5D">
                                    <Label.Triggers>
                                        <DataTrigger TargetType="Label"
                                                     Binding="{Binding IsBecasChecked}"
                                                     Value="True">
                                            <Setter Property="TextColor"
                                                    Value="White"/>
                                        </DataTrigger>
                                    </Label.Triggers>
                                </Label>
                            </Border>

                            <Border Stroke="#FFA500"
                                    StrokeThickness="2"
                                    BackgroundColor="Transparent"
                                    Padding="12,6"
                                    Margin="0,0,8,8">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="20"/>
                                </Border.StrokeShape>
                                <Border.Triggers>
                                    <DataTrigger TargetType="Border"
                                                 Binding="{Binding IsAdmisionesChecked}"
                                                 Value="True">
                                        <Setter Property="BackgroundColor"
                                                Value="#FFA500"/>
                                        <Setter Property="StrokeThickness"
                                                Value="0"/>
                                    </DataTrigger>
                                </Border.Triggers>
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding ToggleEventFilterCommand}"
                                                          CommandParameter="6"/>
                                </Border.GestureRecognizers>
                                <Label Text="Admisiones"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       HorizontalTextAlignment="Center"
                                       TextColor="#D97706">
                                    <Label.Triggers>
                                        <DataTrigger TargetType="Label"
                                                     Binding="{Binding IsAdmisionesChecked}"
                                                     Value="True">
                                            <Setter Property="TextColor"
                                                    Value="White"/>
                                        </DataTrigger>
                                    </Label.Triggers>
                                </Label>
                            </Border>
                        </FlexLayout>

                        <VerticalStackLayout Spacing="8"
                                             IsVisible="{Binding HasChildFilters}">
                            <Label Text="Hijos:"
                                   FontSize="14"
                                   TextColor="#555"
                                   Margin="0,8,0,0"/>

                            <FlexLayout Direction="Row"
                                        Wrap="Wrap"
                                        AlignItems="Center"
                                        JustifyContent="Start"
                                        Margin="0,6,0,0"
                                        BindableLayout.ItemsSource="{Binding ChildFilters}">
                                <BindableLayout.ItemTemplate>
                                    <DataTemplate>
                                        <Border Stroke="{Binding AccentBrush}"
                                                StrokeThickness="2"
                                                BackgroundColor="Transparent"
                                                Padding="12,6"
                                                Margin="0,0,8,8">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="20"/>
                                            </Border.StrokeShape>
                                            <Border.Triggers>
                                                <DataTrigger TargetType="Border"
                                                             Binding="{Binding IsSelected}"
                                                             Value="True">
                                                    <Setter Property="BackgroundColor"
                                                            Value="{Binding AccentColor}"/>
                                                    <Setter Property="StrokeThickness"
                                                            Value="0"/>
                                                </DataTrigger>
                                            </Border.Triggers>
                                            <Border.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding Source={x:Reference calendarFilterPopup}, Path=BindingContext.ToggleChildFilterCommand}"
                                                                      CommandParameter="{Binding .}"/>
                                            </Border.GestureRecognizers>
                                            <Label Text="{Binding DisplayName}"
                                                   FontSize="14"
                                                   FontAttributes="Bold"
                                                   HorizontalTextAlignment="Center"
                                                   TextColor="{Binding AccentColor}">
                                                <Label.Triggers>
                                                    <DataTrigger TargetType="Label"
                                                                 Binding="{Binding IsSelected}"
                                                                 Value="True">
                                                        <Setter Property="TextColor"
                                                                Value="White"/>
                                                    </DataTrigger>
                                                </Label.Triggers>
                                            </Label>
                                        </Border>
                                    </DataTemplate>
                                </BindableLayout.ItemTemplate>
                            </FlexLayout>
                        </VerticalStackLayout>

                        <Grid ColumnDefinitions="*,Auto"
                              ColumnSpacing="10"
                              Margin="0,8,0,0">
                            <Button Text="Cancelar"
                                    Grid.Column="0"
                                    BackgroundColor="#cccccc"
                                    TextColor="#273840"
                                    Command="{Binding CloseFilterPopupCalendarCommand}"/>
                            <Button Text="Aplicar"
                                    Grid.Column="1"
                                    BackgroundColor="#3c9c4c"
                                    TextColor="White"
                                    Command="{Binding ApplyFilterCalendarAndCloseCommand}"/>
                        </Grid>
                    </VerticalStackLayout>
                </DataTemplate>
            </syncfusion:SfPopup.ContentTemplate>
        </syncfusion:SfPopup>
    </AbsoluteLayout>
</ContentPage>