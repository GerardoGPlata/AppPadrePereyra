<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EscolarAppPadres.Views.News.VinculoView">
    <ContentPage.Content>

        <AbsoluteLayout>
            <WebView x:Name="myWebView"
                     AbsoluteLayout.LayoutFlags="All"
                     AbsoluteLayout.LayoutBounds="0,0,1,1"/>

            <Button x:Name="Filtros" 
                    Text="RECORDAR"
                    Margin="10"
                    FontSize="18"
                    TextColor="White"
                    CornerRadius="20"
                    HeightRequest="45"
                    BackgroundColor="{StaticResource StaticButtonColorDarkGray}"
                    AbsoluteLayout.LayoutFlags="All"
                    AbsoluteLayout.LayoutBounds="0,1,1,0.1"
                    Clicked="OpenFilterCalendarReminderVinculoButtonClicked">
            </Button>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>