<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:syncfusion="clr-namespace:Syncfusion.Maui.Popup;assembly=Syncfusion.Maui.Popup"
             x:Class="EscolarAppPadres.Views.Service.PendingPaymentsView"
             Title="PAGOS"
             BackgroundColor="#f5f8fa"
             Padding="{OnPlatform iOS='0,20,0,0', Android='0'}">

    <Grid>
        <RefreshView Command="{Binding LoadPaymentsCommand}"
                     IsRefreshing="{Binding IsRefreshing}">
            <ScrollView>
                <StackLayout Padding="15" Spacing="15" Margin="0,0,0,60">

                    <Label Text="No hay pagos pendientes"
                           FontSize="16"
                           TextColor="Gray"
                           HorizontalOptions="Center"
                           IsVisible="{Binding SinResultados}" />

                    <CollectionView ItemsSource="{Binding PendingPayments}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="0,0,0,10">
                                    <Frame BackgroundColor="White"
                                           CornerRadius="12"
                                           HasShadow="True"
                                           Padding="0">
                                        <Grid Padding="15" RowSpacing="8">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Checkbox de selección -->
                                            <CheckBox Grid.Row="0" Grid.Column="0" 
                                                     Grid.RowSpan="4"
                                                     IsChecked="{Binding IsSelected}"
                                                     VerticalOptions="Center"
                                                     Color="#3c9c4c"/>

                                            <!-- Tipo de documento y concepto -->
                                            <StackLayout Grid.Row="0" Grid.Column="1" 
                                                        Orientation="Horizontal" 
                                                        Spacing="8">
                                                <Frame BackgroundColor="{Binding TipoDocumento, Converter={StaticResource TipoDocumentoToColorConverter}}"
                                                       Padding="8,4"
                                                       CornerRadius="6"
                                                       HasShadow="False">
                                                    <Label Text="{Binding TipoDocumentoTexto}"
                                                           TextColor="White"
                                                           FontSize="12"
                                                           FontAttributes="Bold"/>
                                                </Frame>
                                                <Label Text="{Binding Concepto}"
                                                       FontSize="14"
                                                       FontAttributes="Bold"
                                                       TextColor="#273840"
                                                       VerticalOptions="Center"/>
                                            </StackLayout>

                                            <!-- Información del estudiante -->
                                            <Label Grid.Row="1" Grid.Column="1"
                                                   Text="{Binding Alumno}"
                                                   FontSize="13"
                                                   TextColor="#666666"/>

                                            <!-- Grado y matrícula -->
                                            <Label Grid.Row="2" Grid.Column="1"
                                                   FontSize="12"
                                                   TextColor="#888888">
                                                <Label.FormattedText>
                                                    <FormattedString>
                                                        <Span Text="{Binding Grado}"/>
                                                        <Span Text=" • "/>
                                                        <Span Text="{Binding Matricula}"/>
                                                        <Span Text=" • "/>
                                                        <Span Text="{Binding FechaLimiteFormato}"/>
                                                    </FormattedString>
                                                </Label.FormattedText>
                                            </Label>

                                            <!-- Documento -->
                                            <Label Grid.Row="3" Grid.Column="1"
                                                   Text="{Binding Documento}"
                                                   FontSize="11"
                                                   TextColor="#aaaaaa"/>

                                            <!-- Importe -->
                                            <Label Grid.Row="0" Grid.Column="2"
                                                   Grid.RowSpan="4"
                                                   Text="{Binding ImporteFormateado}"
                                                   FontSize="16"
                                                   FontAttributes="Bold"
                                                   TextColor="#3c9c4c"
                                                   VerticalOptions="Center"
                                                   HorizontalOptions="End"/>
                                        </Grid>
                                    </Frame>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
            </ScrollView>
        </RefreshView>

        <!-- Barra inferior con Total y botón PAGAR -->
        <Grid BackgroundColor="White"
              Padding="15,10"
              ColumnDefinitions="*,Auto"
              VerticalOptions="End"
              Margin="0,0,0,10"
              HeightRequest="60">
            <Label Text="{Binding Total, StringFormat='Total: {0:C2}'}"
                   FontSize="16"
                   FontAttributes="Bold"
                   TextColor="#273840"
                   VerticalOptions="Center" />

            <Button Text="PAGAR"
                    Command="{Binding PagarCommand}"
                    IsEnabled="{Binding CanPagar}"
                    BackgroundColor="#3c9c4c"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="10"
                    Padding="16,6"
                    HeightRequest="40"
                    VerticalOptions="Center"
                    HorizontalOptions="End" />
        </Grid>

        <!-- Popup de detalles de pago -->
        <syncfusion:SfPopup x:Name="paymentDetailsPopup"
                            StaysOpen="True"
                            OverlayMode="Blur"
                            ShowCloseButton="True"
                            IsOpen="{Binding IsPopupOpen}"
                            AutoSizeMode="Height"
                            AnimationMode="Fade"
                            HeaderTitle="{Binding PopupHeader}">
            <syncfusion:SfPopup.PopupStyle>
                <syncfusion:PopupStyle HeaderBackground="#273840"
                                      HeaderFontSize="16"
                                      HeaderTextColor="White"
                                      PopupBackground="White"
                                      BlurIntensity="ExtraDark"/>
            </syncfusion:SfPopup.PopupStyle>
            <syncfusion:SfPopup.ContentTemplate>
                <DataTemplate>
                    <Grid Padding="20,16,20,16" RowSpacing="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Título -->
                        <Label Text="Detalle de pagos seleccionados"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="#69b457"
                               Margin="0,0,0,6"
                               Grid.Row="0"
                               HorizontalOptions="Center"/>

                        <!-- Lista de pagos seleccionados -->
                        <CollectionView Grid.Row="1"
                                       ItemsSource="{Binding SelectedPayments}"
                                       MaximumHeightRequest="300">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="0,4" ColumnSpacing="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackLayout Grid.Column="0">
                                            <Label Text="{Binding Concepto}"
                                                   FontSize="12"
                                                   FontAttributes="Bold"
                                                   TextColor="#273840"/>
                                            <Label Text="{Binding Alumno}"
                                                   FontSize="11"
                                                   TextColor="#666666"/>
                                        </StackLayout>
                                        
                                        <Label Grid.Column="1"
                                               Text="{Binding ImporteFormateado}"
                                               FontSize="12"
                                               FontAttributes="Bold"
                                               TextColor="#3c9c4c"
                                               VerticalOptions="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                        <!-- Línea divisoria -->
                        <BoxView Grid.Row="2" 
                                 BackgroundColor="#e0e0e0" 
                                 HeightRequest="1" 
                                 Margin="0,10"/>

                        <!-- Total -->
                        <Grid Grid.Row="3" ColumnSpacing="6" Padding="0,4,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Label Grid.Column="0"
                                   Text="TOTAL A PAGAR:"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="#273840"
                                   VerticalOptions="Center"/>
                            
                            <Label Grid.Column="1"
                                   Text="{Binding Total, StringFormat='{0:C2}'}"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="#3c9c4c"
                                   VerticalOptions="Center"/>
                        </Grid>

                        <!-- Botón de confirmar pago -->
                        <Button Grid.Row="4" 
                                Text="CONFIRMAR PAGO"
                                Command="{Binding ConfirmPaymentCommand}"
                                BackgroundColor="#3c9c4c"
                                TextColor="White"
                                FontAttributes="Bold"
                                CornerRadius="8"
                                Margin="0,15,0,0"
                                HeightRequest="45"/>
                    </Grid>
                </DataTemplate>
            </syncfusion:SfPopup.ContentTemplate>
        </syncfusion:SfPopup>
    </Grid>
</ContentPage>