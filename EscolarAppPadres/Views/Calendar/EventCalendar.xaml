<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EscolarAppPadres.Views.Calendar.EventCalendar"
             Title="EventCalendar">
    <AbsoluteLayout>

        <VerticalStackLayout AbsoluteLayout.LayoutFlags="All"
                             AbsoluteLayout.LayoutBounds="0,0,1,1">
            <Frame CornerRadius="10" 
                   Padding="10" 
                   HasShadow="True" 
                   BackgroundColor="White"
                   Margin="10">
                <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" 
                      RowSpacing="10" 
                      ColumnDefinitions="*,*">

                    <Frame Grid.Row="0"
                           Grid.ColumnSpan="2"
                           CornerRadius="10"
                           HasShadow="True"
                           BackgroundColor="White"
                           BorderColor="LightGray">
                        <Image Source="{Binding Imagen}"
                               Aspect="AspectFit"
                               HeightRequest="200" />
                    </Frame>

                    <Label Grid.Row="1" 
                           Grid.ColumnSpan="2"
                           Text="{Binding Nombre}"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="Black"
                           HorizontalOptions="Center" />

                    <Label Grid.Row="2" 
                           Grid.ColumnSpan="2"
                           Text="{Binding FechaHoraRango}"
                           FontSize="15"
                           TextColor="Black"
                           HorizontalOptions="Center" />

                    <HorizontalStackLayout Grid.Row="3"
                                           Grid.ColumnSpan="2"
                                           HorizontalOptions="Center">
                        <Label Text="Para: "
                               TextColor="Black"
                               FontSize="15"/>

                        <Label Text="{Binding Nivel}"
                               TextColor="Black"
                               FontSize="15"/>
                    </HorizontalStackLayout>

                    <Label Grid.Row="4" 
                           Grid.ColumnSpan="2"
                           Text="{Binding Descripcion}"
                           FontSize="15"
                           TextColor="Black"
                           HorizontalOptions="Center" />
                </Grid>
            </Frame>
        </VerticalStackLayout>

        <Button x:Name="Filtros" 
                Text="RECORDAR"
                Margin="10"
                FontSize="18"
                TextColor="White"
                CornerRadius="20"
                HeightRequest="45"
                BackgroundColor="{StaticResource StaticButtonColorDarkGray}"
                AbsoluteLayout.LayoutFlags="All"
                AbsoluteLayout.LayoutBounds="0,1,1,0.1"
                Clicked="OpenFilterEventCalendarReminderCommand">
        </Button>
    </AbsoluteLayout>
</ContentPage>