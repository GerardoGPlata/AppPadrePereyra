<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:EscolarAppPadres.Helpers"
             xmlns:viewModels="clr-namespace:EscolarAppPadres.ViewModels.StudentGrade"
             xmlns:syncfusionPopup="clr-namespace:Syncfusion.Maui.Popup;assembly=Syncfusion.Maui.Popup"
             xmlns:controls="clr-namespace:EscolarAppPadres.Controls;assembly=EscolarAppPadres"
             x:Class="EscolarAppPadres.Views.School.QualificationsView"
             Title="ESCOLAR"
             Padding="{OnPlatform iOS='0,20,0,0', Android='0'}"
             BackgroundColor="#f5f8fa">

    <ContentPage.Resources>
        <ResourceDictionary>
            <local:CalificacionColorConverter x:Key="CalificacionColorConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0"
               Text="No se encontraron calificaciones"
               FontSize="16"
               TextColor="Gray"
               HorizontalOptions="Center"
               Margin="15"
               IsVisible="{Binding SinResultados}"/>

        <RefreshView Grid.Row="1"
                     Command="{Binding RefreshCommand}"
                     IsRefreshing="{Binding IsRefreshing}"
                     Margin="15,10">

            <ScrollView IsVisible="True">
                <ScrollView.Triggers>
                    <DataTrigger TargetType="ScrollView"
                                 Binding="{Binding SinResultados}"
                                 Value="True">
                        <Setter Property="IsVisible"
                                Value="False"/>
                    </DataTrigger>
                </ScrollView.Triggers>
                <StackLayout>
                    <!-- Encabezados de la tabla -->
                    <Grid x:Name="headerGrid"
                          BackgroundColor="#69b457"
                          Padding="5"
                          HeightRequest="50">
                        <!-- Los encabezados se generar치n din치micamente -->
                    </Grid>

                    <!-- Datos de la tabla -->
                    <CollectionView x:Name="gradesCollectionView"
                                    ItemsSource="{Binding MateriasConCalificaciones}"
                                    BackgroundColor="White">
                        <!-- El ItemTemplate se establecer치 din치micamente -->
                    </CollectionView>
                </StackLayout>
            </ScrollView>
        </RefreshView>

        <StackLayout Grid.Row="2"
                     Margin="0,0,0,25"
                     HorizontalOptions="Center"
                     VerticalOptions="End"
                     Spacing="10">

            <Button Text="Descargar Boleta"
                    Command="{Binding DescargarBoletaCommand}"
                    BackgroundColor="#69b457"
                    TextColor="White"
                    CornerRadius="20"
                    Padding="12,6"
                    FontSize="13"
                    WidthRequest="200"
                    HeightRequest="44"
                    HorizontalOptions="Center"/>

            <Frame BackgroundColor="#008347"
                   CornerRadius="20"
                   HasShadow="True"
                   Padding="10,4"
                   HeightRequest="50"
                   MinimumWidthRequest="320"
                   WidthRequest="{OnIdiom Phone=340, Tablet=480, Desktop=420}"
                   HorizontalOptions="Center">
                <Grid ColumnDefinitions="*,Auto"
                      VerticalOptions="Center"
                      HeightRequest="44">
                    <controls:ChildPicker Title="Seleccionar hijo"
                                          ItemsSource="{Binding Hijos}"
                                          ItemDisplayBinding="{Binding NombreCompleto}"
                                          SelectedItem="{Binding SelectedHijo}"
                                          FontSize="13"
                                          FontAttributes="Bold"
                                          TextColor="White"
                                          TitleColor="White"
                                          HorizontalOptions="Fill"
                                          Margin="0,0,4,0"/>
                    <Image Source="chevron_down_white"
                           Grid.Column="1"
                           WidthRequest="18"
                           HeightRequest="18"
                           VerticalOptions="Center"
                           HorizontalOptions="End"
                           Margin="4,0,4,0"/>
                </Grid>
            </Frame>
        </StackLayout>

        <syncfusionPopup:SfPopup x:Name="boletaPopup"
                                 StaysOpen="True"
                                 OverlayMode="Blur"
                                 ShowCloseButton="True"
                                 IsOpen="{Binding IsBoletaPopupOpen}"
                                 AutoSizeMode="Height"
                                 AnimationMode="Fade"
                                 HeaderTitle="{Binding BoletaPopupTitle}"
                                 Closed="OnBoletaPopupClosed">
            <syncfusionPopup:SfPopup.PopupStyle>
                <syncfusionPopup:PopupStyle HeaderBackground="#273840"
                                            HeaderFontSize="28"
                                            HeaderTextColor="White"
                                            PopupBackground="White"
                                            CloseButtonIcon="close_icon"
                                            BlurIntensity="Light"/>
            </syncfusionPopup:SfPopup.PopupStyle>
            <syncfusionPopup:SfPopup.ContentTemplate>
                <DataTemplate>
                    <VerticalStackLayout Padding="20"
                                         Spacing="16">
                        <Label Text="{Binding BoletaPopupMessage}"
                               FontSize="14"
                               TextColor="#273840"
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"/>
                        <Button Text="Aceptar"
                                WidthRequest="140"
                                HorizontalOptions="Center"
                                BackgroundColor="#69b457"
                                TextColor="White"
                                CornerRadius="20"
                                Clicked="OnBoletaPopupAcceptClicked"/>
                    </VerticalStackLayout>
                </DataTemplate>
            </syncfusionPopup:SfPopup.ContentTemplate>
        </syncfusionPopup:SfPopup>

        <syncfusionPopup:SfPopup x:Name="criteriaPopup"
                                 StaysOpen="True"
                                 OverlayMode="Blur"
                                 ShowCloseButton="True"
                                 IsOpen="False"
                                 AutoSizeMode="Height"
                                 AnimationMode="Fade"
                                 HeaderTitle="{Binding PopupHeader}">
            <syncfusionPopup:SfPopup.PopupStyle>
                <syncfusionPopup:PopupStyle HeaderBackground="#273840"
                                            HeaderFontSize="30"
                                            HeaderTextColor="White"
                                            PopupBackground="White"
                                            CloseButtonIcon="close_icon"
                                            BlurIntensity="Dark"/>
            </syncfusionPopup:SfPopup.PopupStyle>
            <syncfusionPopup:SfPopup.ContentTemplate>
                <DataTemplate>
                    <Grid Padding="20,16,20,16"
                          RowSpacing="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Text="{Binding PopupPeriod}"
                               FontSize="13"
                               FontAttributes="Bold"
                               TextColor="#69b457"
                               Margin="0,0,0,6"
                               Grid.Row="0"
                               HorizontalOptions="Center"/>

                        <Grid Grid.Row="1"
                              ColumnSpacing="6"
                              RowSpacing="4"
                              Padding="0,0,0,4">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1.2*"/>
                                <ColumnDefinition Width="1.2*"/>
                            </Grid.ColumnDefinitions>

                            <Label Text="Aspecto"
                                   FontAttributes="Bold"
                                   FontSize="12"
                                   TextColor="#273840"
                                   Grid.Row="0"
                                   Grid.Column="0"/>
                            <Label Text="Puntaje"
                                   FontAttributes="Bold"
                                   FontSize="12"
                                   TextColor="#273840"
                                   HorizontalTextAlignment="End"
                                   Grid.Row="0"
                                   Grid.Column="1"/>
                            <Label Text="Calificacion"
                                   FontAttributes="Bold"
                                   FontSize="12"
                                   TextColor="#273840"
                                   HorizontalTextAlignment="End"
                                   Grid.Row="0"
                                   Grid.Column="2"/>

                            <CollectionView ItemsSource="{Binding PopupCriteria}"
                                            Grid.Row="1"
                                            Grid.ColumnSpan="3"
                                            Margin="0,2,0,0">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid ColumnSpacing="6">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="1.2*"/>
                                                <ColumnDefinition Width="1.2*"/>
                                            </Grid.ColumnDefinitions>
                                            <Label Text="{Binding Aspecto}"
                                                   FontSize="12"
                                                   TextColor="#49454E"
                                                   Grid.Column="0"/>
                                            <Label Text="{Binding PuntajeObtenido}"
                                                   FontSize="12"
                                                   TextColor="#49454E"
                                                   HorizontalTextAlignment="End"
                                                   Grid.Column="1"/>
                                            <Label Text="{Binding CalificacionCriterio}"
                                                   FontSize="12"
                                                   TextColor="#49454E"
                                                   HorizontalTextAlignment="End"
                                                   Grid.Column="2"/>
                                        </Grid>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </Grid>

                        <Grid Grid.Row="2"
                              ColumnSpacing="6"
                              Padding="0,4,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1.2*"/>
                                <ColumnDefinition Width="1.2*"/>
                            </Grid.ColumnDefinitions>
                            <Label Text="Total"
                                   FontAttributes="Bold"
                                   FontSize="13"
                                   TextColor="#273840"
                                   Grid.Column="0"/>
                            <Label Text=""
                                   Grid.Column="1"/>
                            <Label Text="{Binding PopupTotal}"
                                   FontAttributes="Bold"
                                   FontSize="13"
                                   TextColor="#273840"
                                   HorizontalTextAlignment="End"
                                   Grid.Column="2"/>
                        </Grid>
                    </Grid>
                </DataTemplate>
            </syncfusionPopup:SfPopup.ContentTemplate>
        </syncfusionPopup:SfPopup>
    </Grid>
</ContentPage>