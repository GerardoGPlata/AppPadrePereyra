<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EscolarAppPadres.Views.Calendar.CalendarView"
             xmlns:core="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
             xmlns:scheduler="clr-namespace:Syncfusion.Maui.Scheduler;assembly=Syncfusion.Maui.Scheduler"
             xmlns:syncfusion="clr-namespace:Syncfusion.Maui.Popup;assembly=Syncfusion.Maui.Popup"
             xmlns:buttons="clr-namespace:Syncfusion.Maui.Buttons;assembly=Syncfusion.Maui.Buttons"
             Title="CALENDARIO">

    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="filter_outline"
                     Text="Filtrar"
                     Priority="0"
                     Order="Primary"
                     Command="{Binding OpenFilterPopupCalendarCommand}"/>
    </ContentPage.ToolbarItems>

    <AbsoluteLayout>
        <ScrollView AbsoluteLayout.LayoutFlags="All"
                    AbsoluteLayout.LayoutBounds="0,0,1,1"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand">
            <Grid>
                <scheduler:SfScheduler x:Name="Scheduler"
                                       IsVisible="{Binding IsCalendarVisible}"
                                       View="{Binding SchedulerViewMode}"
                                       DisplayDate="{Binding DisplayDate}"
                                       AppointmentsSource="{Binding SchedulerEventModels}"
                                       AllowAppointmentDrag="False"
                                       AllowViewNavigation="False"
                                       ShowTodayButton="False"
                                       Tapped="OnSchedulerTapped">
                    <scheduler:SfScheduler.AppointmentMapping>
                        <scheduler:SchedulerAppointmentMapping
                            StartTime="StartDateTime"
                            EndTime="EndDateTime"
                            Subject="Nombre"
                            Background="BackgroundBrush"
                            IsAllDay="IsAllDay"/>
                    </scheduler:SfScheduler.AppointmentMapping>
                    <scheduler:SfScheduler.DaysView>
                        <scheduler:SchedulerDaysView StartHour="8"
                                                     EndHour="20"/>
                    </scheduler:SfScheduler.DaysView>
                </scheduler:SfScheduler>

                <CollectionView IsVisible="{Binding IsAgendaVisible}"
                                ItemsSource="{Binding AgendaEvents}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame CornerRadius="10"
                                   Padding="10"
                                   HasShadow="True"
                                   BackgroundColor="White"
                                   BorderColor="LightGray"
                                   Margin="10">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type CollectionView}}, Path=BindingContext.EventCalendarCommand}"
                                                          CommandParameter="{Binding .}"/>
                                </Frame.GestureRecognizers>

                                <Grid RowDefinitions="Auto,Auto"
                                      RowSpacing="5">

                                    <Label Grid.Row="0"
                                           Text="{Binding FechaInicio, StringFormat='{}{0:ddd. dd MMM, yyyy}'}"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           TextColor="Black"
                                           HorizontalOptions="CenterAndExpand"/>

                                    <Border Grid.Row="1"
                                            BackgroundColor="{Binding ColorIndicador}"
                                            Padding="10">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="10,10,10,10"/>
                                        </Border.StrokeShape>
                                        <Label Text="{Binding Nombre}"
                                               FontSize="15"
                                               FontAttributes="Bold"
                                               TextColor="Black"
                                               HorizontalOptions="Center"/>
                                    </Border>

                                </Grid>

                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <Label Text="No hay eventos programados"
                       TextColor="Black"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       FontSize="18"
                       FontAttributes="Bold"
                       Margin="10"
                       IsVisible="{Binding SelectedAgendaResult}"/>
            </Grid>
        </ScrollView>

        <Button x:Name="Filtros"
                FontSize="18"
                TextColor="Black"
                CornerRadius="20"
                BackgroundColor="{StaticResource StaticBackgroundColorGreen}"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                AbsoluteLayout.LayoutBounds="1,1,AutoSize,AutoSize"
                Margin="10"
                HeightRequest="65"
                WidthRequest="65"
                Command="{Binding OpenFilterPopupCalendarCommand}">
            <Button.ImageSource>
                <FileImageSource File="filter_outline"/>
            </Button.ImageSource>
        </Button>

        <!-- Popup de filtro de calendario (Syncfusion) -->
        <syncfusion:SfPopup x:Name="calendarFilterPopup"
                            Grid.RowSpan="2"
                            StaysOpen="True"
                            OverlayMode="Blur"
                            ShowCloseButton="True"
                            IsOpen="{Binding IsFilterPopupOpen}"
                            IsVisible="{Binding IsFilterPopupOpen}"
                            AutoSizeMode="Height"
                            AnimationMode="Fade"
                            HeaderTitle="Filtrar Calendario">
            <syncfusion:SfPopup.Triggers>
                <DataTrigger TargetType="syncfusion:SfPopup"
                             Binding="{Binding IsFilterPopupOpen}"
                             Value="False">
                    <Setter Property="InputTransparent"
                            Value="True"/>
                </DataTrigger>
                <DataTrigger TargetType="syncfusion:SfPopup"
                             Binding="{Binding IsFilterPopupOpen}"
                             Value="True">
                    <Setter Property="InputTransparent"
                            Value="False"/>
                </DataTrigger>
            </syncfusion:SfPopup.Triggers>
            <syncfusion:SfPopup.PopupStyle>
                <syncfusion:PopupStyle HeaderBackground="#273840"
                                       HeaderFontSize="16"
                                       HeaderTextColor="White"
                                       PopupBackground="White"
                                       CloseButtonIcon="close_icon"
                                       BlurIntensity="Dark"/>
            </syncfusion:SfPopup.PopupStyle>
            <syncfusion:SfPopup.ContentTemplate>
                <DataTemplate>
                    <VerticalStackLayout Padding="20"
                                         Spacing="18">
                        <Label Text="Vista:"
                               FontSize="14"
                               TextColor="#555"/>
                        <VerticalStackLayout Spacing="10">
                            <buttons:SfRadioButton Text="Agenda"
                                                   IsChecked="{Binding IsAgendaSelected}"
                                                   CheckedColor="#008347"
                                                   UncheckedColor="#008347"/>
                            <buttons:SfRadioButton Text="Semana"
                                                   IsChecked="{Binding IsSemanaSelected}"
                                                   CheckedColor="#008347"
                                                   UncheckedColor="#008347"/>
                            <buttons:SfRadioButton Text="Mes"
                                                   IsChecked="{Binding IsMesSelected}"
                                                   CheckedColor="#008347"
                                                   UncheckedColor="#008347"/>
                        </VerticalStackLayout>

                        <Label Text="Tipos de evento:"
                               FontSize="14"
                               TextColor="#555"
                               Margin="0,10,0,0"/>
                        <VerticalStackLayout Spacing="10">
                            <buttons:SfCheckBox Text="Eventos"
                                                IsChecked="{Binding IsEventoChecked}"
                                                CheckedColor="#008347"
                                                UncheckedColor="#008347"/>
                            <buttons:SfCheckBox Text="Días festivos"
                                                IsChecked="{Binding IsDiaFestivoChecked}"
                                                CheckedColor="#008347"
                                                UncheckedColor="#008347"/>
                            <buttons:SfCheckBox Text="Exámenes"
                                                IsChecked="{Binding IsExamenesChecked}"
                                                CheckedColor="#008347"
                                                UncheckedColor="#008347"/>
                            <buttons:SfCheckBox Text="Tareas"
                                                IsChecked="{Binding IsTareasChecked}"
                                                CheckedColor="#008347"
                                                UncheckedColor="#008347"/>
                            <buttons:SfCheckBox Text="Becas"
                                                IsChecked="{Binding IsBecasChecked}"
                                                CheckedColor="#008347"
                                                UncheckedColor="#008347"/>
                            <buttons:SfCheckBox Text="Admisiones"
                                                IsChecked="{Binding IsAdmisionesChecked}"
                                                CheckedColor="#008347"
                                                UncheckedColor="#008347"/>
                        </VerticalStackLayout>

                        <Grid ColumnDefinitions="*,Auto"
                              ColumnSpacing="12"
                              Margin="0,10,0,0">
                            <Button Text="Cancelar"
                                    Grid.Column="0"
                                    BackgroundColor="#cccccc"
                                    TextColor="#273840"
                                    Command="{Binding CloseFilterPopupCalendarCommand}"/>
                            <Button Text="Aplicar"
                                    Grid.Column="1"
                                    BackgroundColor="#3c9c4c"
                                    TextColor="White"
                                    Command="{Binding ApplyFilterCalendarAndCloseCommand}"/>
                        </Grid>
                    </VerticalStackLayout>
                </DataTemplate>
            </syncfusion:SfPopup.ContentTemplate>
        </syncfusion:SfPopup>
    </AbsoluteLayout>
</ContentPage>