<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:syncfusion="clr-namespace:Syncfusion.Maui.Popup;assembly=Syncfusion.Maui.Popup"
             xmlns:buttons="clr-namespace:Syncfusion.Maui.Buttons;assembly=Syncfusion.Maui.Buttons"
             xmlns:converters="clr-namespace:EscolarAppPadres.Helpers"
             x:Class="EscolarAppPadres.Views.Service.PendingPaymentsView"
             Title="PAGOS"
             BackgroundColor="#f5f8fa"
             Padding="{OnPlatform iOS='0,20,0,0', Android='0'}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:TipoDocumentoToColorConverter x:Key="TipoDocumentoToColorConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <RefreshView Grid.Row="0"
                     Command="{Binding LoadPaymentsCommand}"
                     IsRefreshing="{Binding IsRefreshing}">
            <CollectionView ItemsSource="{Binding PendingPayments}"
                            Margin="{OnPlatform iOS='15,20,15,15', Android='15,0,15,15'}"
                            ItemsLayout="VerticalList"
                            SelectionMode="None">
                <CollectionView.EmptyView>
                    <ContentView IsVisible="{Binding SinResultados}">
                        <Label Text="No hay pagos pendientes"
                               FontSize="16"
                               TextColor="Gray"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               Margin="0,20"/>
                    </ContentView>
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="0,0,0,10">
                            <Border Style="{StaticResource CardBorder}">
                                <Grid RowSpacing="8">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Checkbox de selección -->
                                    <buttons:SfCheckBox Grid.Row="0"
                                              Grid.Column="0"
                                              Grid.RowSpan="5"
                                              IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                              WidthRequest="24"
                                              HeightRequest="24"
                                              CornerRadius="5.0"
                                              VerticalOptions="Center"
                                              CheckedColor="#3c9c4c"
                                              UncheckedColor="Gray"
                                              Margin="0,0,10,0"/>

                                    <!-- Concepto (primera fila) -->
                                    <Label Grid.Row="0"
                                           Grid.Column="1"
                                           Text="{Binding Concepto}"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           TextColor="#273840"
                                           VerticalOptions="Center"
                                           LineBreakMode="WordWrap"/>

                                    <!-- Importe total (primera fila, alineado a la derecha) -->
                                    <Label Grid.Row="0"
                                           Grid.Column="2"
                                           Text="{Binding ImporteFormateado}"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="{Binding ColorImporte}"
                                           VerticalOptions="Center"
                                           HorizontalOptions="End"/>

                                    <!-- Información del estudiante (segunda fila) -->
                                    <Label Grid.Row="1"
                                           Grid.Column="1"
                                           Grid.ColumnSpan="2"
                                           Text="{Binding Alumno}"
                                           FontSize="14"
                                           TextColor="#666666"
                                           HorizontalOptions="End"/>

                                    <!-- Estado y fecha límite (tercera fila) -->
                                    <Grid Grid.Row="2"
                                          Grid.Column="1"
                                          Grid.ColumnSpan="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Label Grid.Column="0"
                                               Text="Pendiente"
                                               FontSize="12"
                                               TextColor="#ff6b6b"
                                               FontAttributes="Bold"
                                               HorizontalOptions="Start"
                                               VerticalOptions="Center"/>

                                        <Label Grid.Column="1"
                                               Text="{Binding FechaLimiteFormateada, StringFormat='Fecha límite: {0}'}"
                                               FontSize="12"
                                               TextColor="#666666"
                                               HorizontalOptions="End"
                                               VerticalOptions="Center"/>
                                    </Grid>

                                    <!-- Desglose en línea horizontal (cuarta fila) -->
                                    <StackLayout Grid.Row="3"
                                                 Grid.Column="0"
                                                 Grid.ColumnSpan="3"
                                                 Orientation="Horizontal"
                                                 Spacing="20"
                                                 Margin="0,8,0,0"
                                                 HorizontalOptions="Center">
                                        <!-- Saldo -->
                                        <StackLayout Spacing="2">
                                            <Label Text="Saldo"
                                                   FontSize="10"
                                                   TextColor="#666666"
                                                   FontAttributes="Bold"
                                                   HorizontalOptions="Center"/>
                                            <Label Text="{Binding ImporteBase, StringFormat='{0:C2}'}"
                                                   FontSize="12"
                                                   TextColor="#666666"
                                                   HorizontalOptions="Center"/>
                                        </StackLayout>

                                        <!-- Descuento -->
                                        <StackLayout Spacing="2">
                                            <Label Text="Descuento"
                                                   FontSize="10"
                                                   TextColor="#3c9c4c"
                                                   FontAttributes="Bold"
                                                   HorizontalOptions="Center"/>
                                            <Label Text="{Binding DescuentoDoc, StringFormat='{0:C2}'}"
                                                   FontSize="12"
                                                   TextColor="#3c9c4c"
                                                   HorizontalOptions="Center"/>
                                        </StackLayout>

                                        <!-- Recargos -->
                                        <StackLayout Spacing="2">
                                            <Label Text="Recargos"
                                                   FontSize="10"
                                                   TextColor="#ff8c00"
                                                   FontAttributes="Bold"
                                                   HorizontalOptions="Center"/>
                                            <Label Text="{Binding InteresDoc, StringFormat='{0:C2}'}"
                                                   FontSize="12"
                                                   TextColor="#ff8c00"
                                                   HorizontalOptions="Center"/>
                                        </StackLayout>
                                    </StackLayout>
                                </Grid>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <!-- Barra inferior con Total y botón PAGAR -->
        <Grid Grid.Row="1"
              BackgroundColor="White"
              Padding="15,10"
              ColumnDefinitions="*,Auto"
              HeightRequest="60">
            <Label Text="{Binding Total, StringFormat='Total: {0:C2}'}"
                   FontSize="16"
                   FontAttributes="Bold"
                   TextColor="#273840"
                   VerticalOptions="Center"/>

            <Button Text="PAGAR"
                    Command="{Binding PagarCommand}"
                    IsEnabled="{Binding CanPagar}"
                    BackgroundColor="#3c9c4c"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="10"
                    Padding="16,6"
                    HeightRequest="40"
                    VerticalOptions="Center"
                    HorizontalOptions="End"/>
        </Grid>

        <!-- Popup de detalles de pago -->
        <syncfusion:SfPopup x:Name="paymentDetailsPopup"
                            Grid.RowSpan="2"
                            StaysOpen="True"
                            OverlayMode="Blur"
                            ShowCloseButton="True"
                            IsOpen="{Binding IsPopupOpen}"
                IsVisible="{Binding IsPopupOpen}"
                            AutoSizeMode="Height"
                            AnimationMode="Fade"
                            HeaderTitle="{Binding PopupHeader}">
            <syncfusion:SfPopup.Triggers>
                <DataTrigger TargetType="syncfusion:SfPopup" Binding="{Binding IsPopupOpen}" Value="False">
                    <Setter Property="InputTransparent" Value="True"/>
                </DataTrigger>
                <DataTrigger TargetType="syncfusion:SfPopup" Binding="{Binding IsPopupOpen}" Value="True">
                    <Setter Property="InputTransparent" Value="False"/>
                </DataTrigger>
            </syncfusion:SfPopup.Triggers>
            <syncfusion:SfPopup.PopupStyle>
                <syncfusion:PopupStyle HeaderBackground="#273840"
                                       HeaderFontSize="16"
                                       HeaderTextColor="White"
                                       PopupBackground="White"
                                       BlurIntensity="ExtraDark"/>
            </syncfusion:SfPopup.PopupStyle>
            <syncfusion:SfPopup.ContentTemplate>
                <DataTemplate>
                    <StackLayout Padding="20,20,20,20"
                                 Spacing="15">

                        <!-- Lista de pagos seleccionados - Solo concepto e importe -->
                        <CollectionView ItemsSource="{Binding SelectedPayments}"
                                        MaximumHeightRequest="200">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="0,8"
                                          ColumnSpacing="15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Concepto -->
                                        <Label Grid.Column="0"
                                               Text="{Binding Concepto}"
                                               FontSize="15"
                                               TextColor="#333333"
                                               VerticalOptions="Center"/>

                                        <!-- Importe -->
                                        <Label Grid.Column="1"
                                               Text="{Binding ImporteFormateado}"
                                               FontSize="15"
                                               TextColor="#333333"
                                               VerticalOptions="Center"
                                               HorizontalOptions="End"/>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                        <!-- Separador -->
                        <BoxView BackgroundColor="#e5e5e5"
                                 HeightRequest="1"
                                 Margin="0,5"/>

                        <!-- Resumen financiero -->
                        <StackLayout Spacing="8">
                            <!-- Subtotal -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0"
                                       Text="Subtotal"
                                       FontSize="14"
                                       TextColor="#666666"/>
                                <Label Grid.Column="1"
                                       Text="{Binding SubTotal, StringFormat='{0:C2}'}"
                                       FontSize="14"
                                       TextColor="#666666"
                                       HorizontalOptions="End"/>
                            </Grid>

                            <!-- Descuento -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0"
                                       Text="Descuento"
                                       FontSize="14"
                                       TextColor="#666666"/>
                                <Label Grid.Column="1"
                                       Text="{Binding TotalDescuento, StringFormat='{0:C2}'}"
                                       FontSize="14"
                                       TextColor="#666666"
                                       HorizontalOptions="End"/>
                            </Grid>

                            <!-- Recargos -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0"
                                       Text="Recargos"
                                       FontSize="14"
                                       TextColor="#666666"/>
                                <Label Grid.Column="1"
                                       Text="{Binding TotalRecargos, StringFormat='{0:C2}'}"
                                       FontSize="14"
                                       TextColor="#666666"
                                       HorizontalOptions="End"/>
                            </Grid>
                        </StackLayout>

                        <!-- Separador -->
                        <BoxView BackgroundColor="#e5e5e5"
                                 HeightRequest="1"
                                 Margin="0,5"/>

                        <!-- Total -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0"
                                   Text="Total"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="#333333"/>
                            <Label Grid.Column="1"
                                   Text="{Binding Total, StringFormat='{0:C2}'}"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="#333333"
                                   HorizontalOptions="End"/>
                        </Grid>

                        <!-- Botón de pago -->
                        <Button Text="{Binding Total, StringFormat='PAGAR {0:C2}'}"
                                Command="{Binding ConfirmPaymentCommand}"
                                BackgroundColor="#3c9c4c"
                                TextColor="White"
                                FontAttributes="Bold"
                                CornerRadius="25"
                                HeightRequest="50"
                                Margin="0,10,0,0"/>
                    </StackLayout>
                </DataTemplate>
            </syncfusion:SfPopup.ContentTemplate>
        </syncfusion:SfPopup>
    </Grid>
</ContentPage>