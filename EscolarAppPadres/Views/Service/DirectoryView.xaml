<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EscolarAppPadres.Views.Service.DirectoryView"
             Title="DIRECTORIO"
             BackgroundColor="#f5f8fa"
             Padding="{OnPlatform iOS='15,20,15,0', Android='15', Default='15'}">

    <RefreshView IsRefreshing="{Binding IsRefreshing}" Command="{Binding LoadDirectoryCommand}">
        <ScrollView>
            <Grid Padding="{OnPlatform iOS='0,20,0,60', Android='15', Default='15'}" RowSpacing="15">
                <CollectionView ItemsSource="{Binding DirectoryEntries}" HorizontalOptions="FillAndExpand">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Vertical" ItemSpacing="15" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                <Frame BackgroundColor="White"
                    CornerRadius="{OnPlatform iOS=24, Android=16, Default=16}"
                    HasShadow="True"
                    Padding="15"
                    Margin="{OnPlatform iOS='0', Android='10,0,10,0', Default='10,0,10,0'}"
                    HorizontalOptions="FillAndExpand"
                    WidthRequest="{OnPlatform iOS=-1, Android=-1, Default=-1}">
                                <Grid ColumnDefinitions="*,Auto,Auto"
                                      RowDefinitions="Auto,Auto"
                                      ColumnSpacing="10">
                                    <StackLayout Grid.Column="0" Grid.RowSpan="2" Spacing="3">
                                        <Label Text="{Binding NombreDepartamento}"
                                               FontSize="14"
                                               FontAttributes="Bold"
                                               TextColor="#273840" />
                                        <Label Text="{Binding CorreoElectronico}"
                                               FontSize="13"
                                               TextColor="Gray" />
                                    </StackLayout>
                                    <Label Text="{Binding Extension, StringFormat='EXT. {0}'}"
                                           FontSize="14"
                                           FontAttributes="Bold"
                                           TextColor="#273840"
                                           VerticalOptions="Start"
                                           Grid.Column="1" />
                                    <ImageButton Source="phone_enable"
                                                 HeightRequest="24"
                                                 WidthRequest="24"
                                                 BackgroundColor="Transparent"
                                                 CommandParameter="{Binding Extension}"
                                                 Clicked="OnCallClicked"
                                                 Grid.Column="2"
                                                 VerticalOptions="Start" />
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Grid>
        </ScrollView>
    </RefreshView>
</ContentPage>
