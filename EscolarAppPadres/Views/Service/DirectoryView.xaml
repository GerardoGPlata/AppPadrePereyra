<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EscolarAppPadres.Views.Service.DirectoryView"
             Title="DIRECTORIO"
             BackgroundColor="#f5f8fa"
             Padding="15">

    <ScrollView>
        <VerticalStackLayout Spacing="12">

            <!-- Repite esta tarjeta para cada área -->
            <Frame BackgroundColor="White"
                   CornerRadius="16"
                   HasShadow="True"
                   Padding="15">
                <Grid ColumnDefinitions="*,Auto,Auto"
                      RowDefinitions="Auto,Auto"
                      ColumnSpacing="10">

                    <!-- Nombre y correo -->
                    <StackLayout Grid.Column="0" Grid.RowSpan="2" Spacing="3">
                        <Label Text="BACHILLERATO"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="#273840" />
                        <Label Text="bachillerato@pereyra.edu.mx"
                               FontSize="13"
                               TextColor="Gray" />
                    </StackLayout>

                    <!-- Extensión -->
                    <Label Text="EXT. 7040"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="#273840"
                           VerticalOptions="Start"
                           Grid.Column="1" />

                    <!-- Botón de llamada -->
                    <ImageButton Source="phone_icon.png"
                                 HeightRequest="24"
                                 WidthRequest="24"
                                 BackgroundColor="Transparent"
                                 CommandParameter="7040"
                                 Clicked="OnCallClicked"
                                 Grid.Column="2"
                                 VerticalOptions="Start" />
                </Grid>
            </Frame>

            <!-- Repite para otras áreas, solo cambia textos y extensión -->

            <!-- Puedes generar dinámicamente si prefieres usar un ViewModel -->
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
